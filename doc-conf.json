{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ "src/README.md",
                     "src/JSUCrypt.js",
                     "src/keys.js",  "src/cipher.js", "src/signature.js", "src/hash.js", "src/ka.js",
                     "src/pad.js", "src/ecfp.js",
                     "src/ecdsa.js",  "src/rsa.js", "src/des.js", 
                     "src/hmac.js",
                     "src/sha256.js",  "src/ripemd160.js", "src/sha1.js", "src/helpers.js",
                     "src/ecdh.js" ],
        "exclude": [],
        "includePattern": ".+\\.(js(doc)?|md)$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [ "plugins/markdown" ],
    "markdown": {
         "parser": "evilstreak",
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "encoding": "utf8", 
        "destination": "./dist/doc/", 
        "lenient": true, 
    }
}
